---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro'; // Import FormattedDate
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content'; // To fetch blog posts

const allBlogPosts = await getCollection('blog'); // Get all posts from the 'blog' collection
const sortedPosts = allBlogPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
const latestPosts = sortedPosts.slice(0, 3); // Get the 3 latest posts
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Add custom styles for homepage sections */
			.hero-section {
				text-align: center;
				padding: 4rem 1rem;
				background-color: var(--color-background-offset); /* Example background */
			}
			.hero-section h1 {
				font-size: 3rem;
				margin-bottom: 0.5rem;
			}
			.hero-section p {
				font-size: 1.2rem;
				color: rgb(var(--gray));
			}
			.section-title {
				text-align: center;
				margin: 3rem 0 2rem;
				font-size: 2rem;
			}
			.latest-posts, .featured-apps {
				max-width: 960px;
				margin: 0 auto;
				padding: 1rem;
				display: grid;
				gap: 1.5rem;
			}
            @media (min-width: 768px) {
                .latest-posts {
                    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                }
            }
			.post-card {
				border: 1px solid var(--color-border);
				border-radius: 8px;
				padding: 1.5rem;
				background-color: rgb(var(--gray-light)); /* Example background */
                text-decoration: none;
                color: inherit;
                display: block;
                transition: transform 0.2s ease-in-out;
			}
            .post-card:hover {
                transform: translateY(-5px);
            }
			.post-card h3 {
				margin-top: 0;
				margin-bottom: 0.5rem;
                color: rgb(var(--gray-dark));
			}
			.post-card .pub-date {
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin-bottom: 1rem;
                display: block;
			}
			.post-card p {
				margin-bottom: 1rem;
                color: rgb(var(--gray-dark));
			}
			.app-card {
				text-align: center;
				padding: 1.5rem;
				border: 1px solid var(--color-border);
				border-radius: 8px;
				background-color: rgb(var(--gray-light)); /* Example background */
			}
			.app-card h3 {
				margin-top: 0;
				margin-bottom: 0.5rem;
                color: rgb(var(--gray-dark));
			}
            .button {
                display: inline-block;
                padding: 0.75rem 1.5rem;
                background-color: rgb(var(--accent-light));
                color: white;
                text-decoration: none;
                border-radius: 0.375rem;
                transition: background-color 0.2s ease-in-out;
            }
            .button:hover {
                background-color: rgb(var(--accent-dark));
            }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero-section">
				<h1>{SITE_TITLE}</h1>
				<p>{SITE_DESCRIPTION}</p>
				<p>
					<a href="/blog" class="button">最新の記事を読む</a>
				</p>
			</section>

			<!-- Latest Blog Posts Section -->
			<section>
				<h2 class="section-title">最新の記事</h2>
				<div class="latest-posts">
					{latestPosts.map((post) => (
						<a href={`/blog/${post.slug}/`} class="post-card">
							<h3>{post.data.title}</h3>
							<span class="pub-date"><FormattedDate date={post.data.pubDate} /></span>
							<p>{post.data.description}</p>
						</a>
					))}
				</div>
				<p style="text-align: center; margin-top: 2rem;">
					<a href="/blog" class="button">すべての記事を見る</a>
				</p>
			</section>

			<!-- Featured Apps Section -->
			<!--
			<section>
				<h2 class="section-title">私のアプリ</h2>
				<div class="featured-apps">
					<div class="app-card">
						<h3>PocketScore</h3>
						<p>楽譜管理アプリ</p>
						<p>
							<a href="#" class="button">詳細を見る</a>
						</p>
					</div>
					<div class="app-card">
						<h3>勤務表アプリ (開発中)</h3>
						<p>Coming soon...</p>
					</div>
				</div>
			</section>
			-->

			<!-- Optional: About Section -->
			<section>
				<h2 class="section-title">私について</h2>
				<p style="text-align: center;">
					ここは簡単な自己紹介です。詳細は<a href="/about" class="button">「私について」</a>ページをご覧ください。
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>